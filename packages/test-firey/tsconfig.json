{
  "include": [
    "./**/*.ts",
    "./**/**/*.ts"
  ],
  "compilerOptions": {
    "types": [
      "bun-types"
    ],
    "lib": [
      "esnext"
    ],
    "outDir": "dist",
    "rootDir": ".",
    "module": "nodenext",
    "target": "esnext",
    "moduleResolution": "nodenext",
    "experimentalDecorators": true,
    "allowJs": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}
